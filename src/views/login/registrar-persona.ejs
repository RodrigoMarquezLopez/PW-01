<body class="class-body">
    <h3 class="center-align">Crea tu usuario</h3>
    <div>
        <body class="class-body class-body2">
            <div id="login-page" class="row login-page">
                <div class="col s12 z-depth-6 card-panel">
                  <form id="registrar" action="/create/user" method="post" >
                    <div class="row">
                    </div>
                    <div class="row">
                      <div class="input-field col s12">
                        <label for="name">Nombre:</label>
                        <input type="text" name="nombres" id="name">
                      </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="apellidoP">Apellido Paterno:</label>
                            <input type="text" name="apellidoP" id="apellidoP">
                        </div>
                      </div>
                      <div class="row">
                        <div class="input-field col s12">
                            <label for="apellidoM">Apellido Materno:</label>
                            <input type="text" name="apellidoM" id="apellidoM">
                        </div>
                      </div>
                      <div class="row">
                        <div class="input-field col s12">
                            <label for="correo">Correo Electronico:</label>
                            <input type="email" name="correo" id="correo">
                        </div>
                      </div>
                    
                      <div class="row">
                        <div class="input-field col s12">
                            <label for="password">Contraseña:</label>
                            <input type="password" name="contrasenia" id="contrasenia">
                        </div>
                      </div>
                      <div class="row">
                        <div class="input-field col s12">
                            <span id="errorContrasenia"></span>
                            <label for="passwordConfirm">Confirmacion contraseña:</label>
                            <input type="password" name="passwordConfirm" id="contraseniaConf">
                        </div>
                      </div>


                    <div class="row">
                      <div class="input-field col s12">
                        
                        <button type="submit" class="btn waves-effect waves-light col s12">Create</button>
                      </div>
                    </div>
                    
            
                  </form>
                </div>
              </div> </body>
    </div>
    <%- include("../comunes/modal-registro.ejs")  -%>
    <script src="/assets/js/main-registro-persona.js"></script>
</body>

</html>